    <div class="container">
      <div class="meal-wrapper">
        <div class="meal-search">
          <h2 class="title">Add Your Recipe</h2>
          <blockquote>
            Real food doesn't have ingredients, real food is ingredients.<br />
            <cite>- Jamie Oliver</cite>
          </blockquote>
          <form action="/edit/<%= data[0].id %>" method="post">
            <div class="meal-search-box">
              <div class="col-3">
                <input
                  type="text"
                  class="search-control effect-7"
                  placeholder="Enter Recipe Name"
                  name="ingredient"
                />
                <span class="focus-border">
                  <i></i>
                </span>
              </div>

              <div class="col-3">
                <input
                  type="text"
                  class="search-control effect-7"
                  placeholder="description"
                  name="description"
                />
                <span class="focus-border">
                  <i></i>
                </span>
              </div>
              <div class="col-3">
                <input
                  type="text"
                  class="search-control effect-7"
                  placeholder="instroctions"
                  name="instroctions"
                />
                <span class="focus-border">
                  <i></i>
                </span>
              </div>
              <div class="col-3">
                <input
                  type="text"
                  class="search-control effect-7"
                  placeholder="Calories"
                  name="calories"
                />
                <span class="focus-border">
                  <i></i>
                </span>
              </div>
              <div class="col-3">
                <input
                  type="text"
                  class="search-control effect-7"
                  placeholder="time of prepration"
                  name="time-of-prepration"
                />
                <span class="focus-border">
                  <i></i>
                </span>
              </div>
              <div class="col-3">
                <input
                  type="text"
                  class="search-control effect-7"
                  placeholder="image url"
                  name="imgurl"
                />
                <span class="focus-border">
                  <i></i>
                </span>
              </div>

              <button type="submit" class="search-btn btn" id="search-btn">
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
