  <body>
    <h1>Book Add Form</h1>
    <form action="/book/addBook" method="post" enctype="multipart/form-data">
      <input type="text" placeholder="Book Name" name="bookname" />
      <input type="text" placeholder="Author Name" name="authorname" />
      <input type="text" placeholder="Book price" name="price" />
      <input type="text" placeholder="Book description" name="description" />
      <input type="file" placeholder="Book Image" name="image" />
      <input type="submit" />
    </form>
  </body>
